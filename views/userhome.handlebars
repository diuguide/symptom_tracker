<header class="jumbotron jumbotron-fluid bg-maroon">
  <div class="container">
    <h1>Welcome to Myriad, {{email}}!</h1>
    <ul class="nav">
      <li class="nav-item">
        <a id="checkIn" class="nav-link text-warning" href="#">Daily Check-in</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-warning" href="/logout">Logout</a>
      </li>
    </ul>
  </div>
</header>

<div class="container">

  <style>
    table,
    th,
    td {
      border: 1px solid maroon;
    }

    .true {
      background-color: lightgreen;
    }

    .false {
      background-color:
    }
  </style>

  <table>
    <tr>
      <th>Date</th>
      <th>Runny Nose</th>
      <th>Cough</th>
      <th>Nausea</th>
      <th>Vomitting</th>
      <th>Bloating</th>
      <th>Constipation</th>
      <th>Mood</th>
      <th>Note</th>
    </tr>
    {{#each symptomData}}
    <tr>
      <td>{{this.dataValues.createdAt}}</td>
      <td class="{{this.dataValues.runnyNose}}">{{this.dataValues.runnyNose}}</td>
      <td class="{{this.dataValues.cough}}">{{this.dataValues.cough}}</td>
      <td class="{{this.dataValues.nausea}}">{{this.dataValues.nausea}}</td>
      <td class="{{this.dataValues.vomitting}}">{{this.dataValues.vomitting}}</td>
      <td class="{{this.dataValues.bloating}}">{{this.dataValues.bloating}}</td>
      <td class="{{this.dataValues.constipation}}">{{this.dataValues.constipation}}</td>
      <td>{{this.dataValues.mood}}</td>
      <td>{{this.dataValues.note}}</td>
    </tr>
    {{/each}}
  </table>
  <br>
  <br>
  {{!-- Create day modal to pop up when daysquare is clicked --}}

  <div id="dayModal" class="modal">
    <!-- Modal content -->
    <div class="modal-content p-4">
      <span id="class" class="close">&times;</span>
      <p>{{> forms/symptoms}}</p>
    </div>
  </div>

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <!-- connect to js -->
  <script src="/js/userhome.js"></script>

