<form action="/api/user_data" method="post">
  <h2>Select symptoms experienced today:</h2>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="checkbox" id="runnyNose" value="true" name="runnyNose">
    <label class="form-check-label" for="runnyNose">Runny Nose</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="checkbox" id="cough" value="true" name="cough">
    <label class="form-check-label" for="cough">cough</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="checkbox" id="nextSymptom" value="true" name="nextSymptom" disabled>
    <label class="form-check-label" for="nextSymptom">Next Symptom (placeholder)</label>
  </div>
  <div class="form-group">
    <label for="mood">Mood</label>
    <select class="form-control" id="mood" name="mood">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
  </div>
  <div class="form-group">
    <label for="other">Other symptoms/notes:</label>
    <input type="text" class="form-control" id="other" name="other">
  </div>
  <button type="submit" class="btn bg-maroon">Submit</button>
</form>